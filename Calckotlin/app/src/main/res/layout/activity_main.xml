<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"

              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
            android:id="@+id/tvExpression"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="end"
            android:ellipsize="start"
            android:textSize="30sp"
            android:singleLine="true"
            android:background="@color/colorPrimaryDark"/>


    <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="35dp"

            android:gravity="end"
            android:textSize="30sp"
            android:singleLine="true"
            android:background="@color/colorPrimaryDark" android:text="0"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/tvAC"
                    style="@style/NumberButtonStyle"
                    android:text="AC"/>
            <TextView
                    android:id="@+id/tvPM"
                    style="@style/NumberButtonStyle"
                    android:text="+/-"/>
            <TextView
                    android:id="@+id/tvPersent"
                    style="@style/NumberButtonStyle"
                    android:text="%"/>
            <TextView
                    android:id="@+id/tvDiv"
                    style="@style/ActionButtonStyle"
                    android:text="/"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/tv7"
                    style="@style/NumberButtonStyle"
                    android:text="7"/>
            <TextView
                    android:id="@+id/tv8"
                    style="@style/NumberButtonStyle"
                    android:text="8"/>
            <TextView
                    android:id="@+id/tv9"
                    style="@style/NumberButtonStyle"
                    android:text="9"/>
            <TextView
                    android:id="@+id/tvMult"
                    style="@style/ActionButtonStyle"
                    android:text="*"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/tv4"
                    style="@style/NumberButtonStyle"
                    android:text="4"/>
            <TextView
                    android:id="@+id/tv5"
                    style="@style/NumberButtonStyle"
                    android:text="5"/>
            <TextView
                    android:id="@+id/tv6"
                    style="@style/NumberButtonStyle"
                    android:text="6"/>
            <TextView
                    android:id="@+id/tvMinus"
                    style="@style/ActionButtonStyle"
                    android:text="-"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/tv1"
                    style="@style/NumberButtonStyle"
                    android:text="1"/>
            <TextView
                    android:id="@+id/tv2"
                    style="@style/NumberButtonStyle"
                    android:text="2"/>
            <TextView
                    android:id="@+id/tv3"
                    style="@style/NumberButtonStyle"
                    android:text="3"/>
            <TextView
                    android:id="@+id/tvPlus"
                    style="@style/ActionButtonStyle"
                    android:text="+"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/tvZero"
                        style="@style/NumberButtonStyle"
                        android:layout_width="100dp"
                        android:text="0" />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/tvDot"
                        style="@style/NumberButtonStyle"
                        android:text=","/>
                <TextView
                        android:id="@+id/tvEquals"
                        style="@style/ActionButtonStyle"
                        android:text="="/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>